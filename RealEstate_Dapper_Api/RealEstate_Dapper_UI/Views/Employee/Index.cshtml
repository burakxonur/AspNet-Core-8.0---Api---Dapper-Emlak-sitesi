@model List<ResultEmployeeDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Admin/Index.cshtml";
	int count = 0;
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Personel Listesi</h6>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Personel Adı</th>
								<th scope="col">Personel Ünvanı</th>
								<th scope="col">Personel Maili</th>
								<th scope="col">Personel Numara</th>
								<th scope="col">Personel Resmi</th>
								<th scope="col">Durum</th>
								<th scope="col">Sil</th>
								<th scope="col">Güncelle</th>

							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.EmployeeName</td>
									<td>@item.Title</td>
									<td>@item.Mail</td>
									<td>@item.PhoneNumber</td>
									<td>@item.ImageUrl</td>
									<td>@item.Status</td>
									<td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-warning">Güncelle</a></td>

								</tr>
							}

						</tbody>
					</table>
					<td><a href="/Employee/CreateEmployee/" class="btn btn-outline-primary">Yeni Personel Ekle</a></td>
				</div>
			</div>
		</div>
	</div>
</div>


